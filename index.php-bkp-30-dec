  <script>
    AOS.init();
  </script>

  <script>
    // Select all case study items
    const caseStudies = document.querySelectorAll('.cs_case_study');

    // Add hover functionality
    caseStudies.forEach((caseStudy) => {
      caseStudy.addEventListener('mouseenter', () => {
        // Add a class to expand the hovered column
        caseStudy.classList.add('active');

        // Shrink other columns
        caseStudies.forEach((otherCaseStudy) => {
          if (otherCaseStudy !== caseStudy) {
            otherCaseStudy.classList.add('inactive');
          }
        });
      });

      caseStudy.addEventListener('mouseleave', () => {
        // Remove the active and inactive classes when the mouse leaves
        caseStudy.classList.remove('active');
        caseStudies.forEach((otherCaseStudy) => {
          otherCaseStudy.classList.remove('inactive');
        });
      });
    });
  </script>





